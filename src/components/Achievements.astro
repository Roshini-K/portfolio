---
const achievements = [
  {
    title: "Achievement 1",
    description: "Description of your first major achievement"
  },
  {
    title: "Achievement 2",
    description: "Description of your second major achievement"
  }
];
---
<section class="py-20 px-4 bg-gray-50" id="achievements">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-bold text-center mb-16 gradient-text">Achievements</h2>
    <div class="grid md:grid-cols-2 gap-8">
      {achievements.map((achievement) => (
        <div 
          class="p-6 bg-white rounded-2xl shadow-lg"
          data-aos="fade-up"
        >
          <h3 class="text-xl font-semibold mb-3">{achievement.title}</h3>
          <p class="text-gray-600">{achievement.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>